{
  "name": "idiosyncratic/http-runner",
  "description": "PSR-15 HTTP Request runner",
  "type": "library",
  "license": "ISC",
  "authors": [
    {
      "name": "Jason Silkey",
      "email": "jason@jasonsilkey.com"
    }
  ],
  "keywords": [
    "psr-7",
    "psr-15"
  ],
  "require": {
    "php": ">=7.3",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0"
  },
  "require-dev": {
    "doctrine/coding-standard": "^6.0",
    "phpstan/phpstan": "^0.11",
    "phpunit/phpunit": "^8.0"
  },
  "suggest": {
    "idiosyncratic/http-middlewarehandler": "PSR-15 Request/Middleware handler"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "discard-changes": true,
    "bin-dir" : "bin"
  },
  "autoload": {
    "psr-4": {
      "Idiosyncratic\\Http\\Runner\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Idiosyncratic\\Http\\Runner\\": "tests"
    }
  }
}
